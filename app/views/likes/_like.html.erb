<% if user_signed_in? %>
  <% if photo.liked_by?(current_user) %>
    <%= link_to(photo_add_path(photo), method: :delete, remote: true, id: :"like-button-#{photo.id}") do %>
      <i class="fa-lg fas fa-heart icon-btn liked"></i>
        いいね済み
    <% end %>
  <% else %>
    <%= link_to(photo_add_path(photo), method: :post, remote: true, id: :"like-button-#{photo.id}") do %>
      <i class="fa-lg fas fa-heart icon-btn not-like"></i>
      いいねしてない
    <% end %>
  <% end %>
<% end %>