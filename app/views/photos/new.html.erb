<%= form_with model: @photo, url: photos_path, local: true do |f| %>
  <div class="container mt-5">
    <%= render 'shared/error_messages', model: f.object%>
    <div class="row">
      <div class="col">
        <h2 class="text-center">NEW POST</h2>
      </div>
    </div>
  <div>
  <div class="row mt-5 justify-content-center">
    <div class="col col-12 col-sm-12 col-lg-6 center-block text-center">
      <div class="form-group mb-4">
        <label for="photo_cat_photo"><h4>おしゃしん </h4></label><span class="badge badge-danger">必須</span>
        <%= f.file_field :cat_photo, class: "form-control" %>
      </div>
      <div class="form-group mb-4">
        <label for="photo_detail"><h4>コメント</h4></label><br>
        <span class="form-text text-muted">（255文字以内）</span>
        <%= f.text_area :detail, maxlength:"255", class: "form-control" %>
      </div>
      <div class="form-group mb-4">
        <label for="photo_cat_id"><h4>うつっているねこちゃん </h4></label><span class="badge badge-danger">必須</span><br>
        <%= f.collection_check_boxes(:cat_ids, current_user.cats.all, :id, :cat_name) do |b| %>
          <%= b.label class: "form-control mt-3" do %>
            <%= b.check_box + b.text %>
          <% end %>
        <% end %>
      </div>
      <div class="form-group mt-5">
        <h3><%= f.submit "OK!", class: "btn btn-lg btn-primary rounded-pill" %></h3>
      </div>
    </div>
  </div>
<% end%>