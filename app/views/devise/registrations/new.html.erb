<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h4 class="text-center">新規登録</h4>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-sm-6 center-block text-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <label for="user_email">メールアドレス</label>
          <span class="badge badge-danger">必須</span><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field form-group">
          <label for="user_password">パスワード</label>
          <span class="badge badge-danger">必須</span><br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <span class="form-text text-muted">※英字と数字の両方を含めて設定してください</span>
        </div>

        <div class="field form-group">
          <label for="user_password_confirmation">パスワード（確認）</label>
          <span class="badge badge-danger">必須</span><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field form-group">
          <label for="user_user_name">ユーザー名</label>
          <span class="badge badge-danger">必須</span><br>
          <em>（4文字以上）</em><br>
          <%= f.text_field :user_name, autocomplete: "nickname", class: "form-control" %>
        </div>

        <div class="field form-group">
          <label for="user_user_profile">プロフィール</label><br>
          <%= f.text_area :user_profile, autocomplete: "profile", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary m-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>