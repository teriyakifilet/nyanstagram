<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="form-text">メールアドレス</label>
    <span class="indispensable">必須</span><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <label class="form-text">パスワード</label>
    <span class="indispensable">必須</span><br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br />
    ※英字と数字の両方を含めて設定してください
  </div>

  <div class="field">
    <label class="form-text">パスワード（確認）</label>
    <span class="indispensable">必須</span><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label class="form-text">ユーザー名</label>
    <span class="indispensable">必須</span><br>
    <em>（4文字以上）</em><br>
    <%= f.text_field :user_name, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <label class="form-text">プロフィール</label><br>
    <%= f.text_area :user_profile, autocomplete: "profile" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
