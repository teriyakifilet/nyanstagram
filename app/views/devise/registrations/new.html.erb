<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container mt-5">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col">
        <h2 class="text-center">SIGN UP</h2>
      </div>
    </div>
    <div class="row mt-5 justify-content-center">
      <div class="col col-12 col-sm-12 col-lg-6 center-block text-center">
        <div class="field form-group mt-3 mb-4">
          <label for="user_email"><h4>メールアドレス</h4></label>
          <span class="badge badge-danger">必須</span><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field form-group mb-4">
          <label for="user_password"><h4>パスワード</h4></label>
          <span class="badge badge-danger">必須</span><br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <span class="form-text text-muted">※英字と数字の両方を含めて設定してください</span>
        </div>

        <div class="field form-group mb-4">
          <label for="user_password_confirmation"><h4>パスワード（確認）</h4></label>
          <span class="badge badge-danger">必須</span><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field form-group">
          <label for="user_user_name"><h4>ユーザー名</h4></label>
          <span class="badge badge-danger">必須</span><br>
          <em>（4文字以上）</em><br>
          <%= f.text_field :user_name, autocomplete: "nickname", class: "form-control" %>
        </div>

        <div class="field form-group">
          <label for="user_user_profile"><h4>プロフィール</h4></label><br>
          <%= f.text_area :user_profile, autocomplete: "profile", class: "form-control" %>
        </div>

        <div class="actions form-group mb-4">
          <%= f.submit "SIGN UP", class: "btn btn-lg btn-primary rounded-pill m-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>